@model BangazonWorkforceManagement.ViewModels.EmployeeDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Employee.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Employee.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Employee.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Employee.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Employee.StartDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Employee.StartDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Employee.Departments)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Employee.Departments.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ComputerList)
        </dt>
        <dd>
            @foreach (var x in Model.ComputerList)
            {<p>ComputerId: @x.ComputerId -- @x.Manufacturer @x.Make</p><br />}
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FuturePrograms)
        </dt>
        <dd>
            @foreach (var x in Model.FuturePrograms)
            {<p>@x.Name @x.StartDate @x.EndDate</p><br />}
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AttendedPrograms)
        </dt>
        <dd>
            @foreach (var x in Model.AttendedPrograms)
            {<p>@x.Name @x.StartDate @x.EndDate</p><br />}
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NotAttendingPrograms)
        </dt>
        <dd>
            @foreach (var x in Model.NotAttendingPrograms)
            {<p>@x.Name @x.StartDate @x.EndDate</p><br />}
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Employee.EmployeeId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
